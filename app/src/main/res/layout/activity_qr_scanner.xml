<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/parentLayout"
    tools:context=".QrScanner"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="?android:attr/actionBarSize"
                android:paddingRight="?attr/actionBarSize"
                android:text="SmartLogin"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <fragment
        android:id="@+id/barcode_fragment"
        android:name="com.example.vpunay.qrsample.Scanner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_toolbar" />

    <!-- Scanner overlay animation -->
    <com.example.vpunay.qrsample.ScannerOverlay
        android:id="@+id/scannerOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#44000000"
        app:layout_constraintTop_toTopOf="@+id/barcode_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:line_speed="6"
        app:line_width="4"
        app:square_height="250"
        app:square_width="250" />

    <FrameLayout
        android:id="@+id/qrBorder"
        android:layout_width="278dp"
        android:layout_height="277dp"
        android:background="@drawable/borders"
        app:layout_constraintBottom_toBottomOf="@+id/scannerOverlay"
        app:layout_constraintEnd_toEndOf="@+id/scannerOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scannerOverlay" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:src="@drawable/warning"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/qrBorder"
        app:layout_constraintEnd_toEndOf="@+id/qrBorder"
        app:layout_constraintStart_toStartOf="@+id/qrBorder"
        app:layout_constraintTop_toTopOf="@+id/qrBorder" />

    <ProgressBar
        android:id="@+id/pBar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:theme="@style/progressBarWhite"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/qrBorder"
        app:layout_constraintEnd_toEndOf="@+id/qrBorder"
        app:layout_constraintStart_toStartOf="@+id/qrBorder"
        app:layout_constraintTop_toTopOf="@+id/qrBorder"
        app:layout_constraintVertical_bias="0.496" />

    <TextView
        android:id="@+id/barcode_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="SmartLogin"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrBorder" />

    <Button
        android:id="@+id/qrbutton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_button"
        android:text="Cancel"
        android:textColor="#1565C0"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode_value" />

    <View
        android:id="@+id/view"
        android:layout_width="150dp"
        android:layout_height="7dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/horizontal_line"
        app:layout_constraintBottom_toBottomOf="@+id/scannerOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>